<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@drawable/memotest">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="70dp"
            android:layout_above="@+id/bStart"
            android:layout_alignRight="@+id/bStart"
            android:layout_alignEnd="@+id/bStart"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:id="@+id/b_beginner"
                    android:onClick="onButtonClick"
                    android:background="@drawable/buttonstart"
                    android:width="150dp"
                    android:height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_above="@+id/bMenu"
                    android:layout_centerHorizontal="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:id="@+id/b_normal"
                    android:onClick="onButtonClick"
                    android:background="@drawable/buttonstart"
                    android:width="150dp"
                    android:height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_above="@+id/bMenu"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard"
                    android:id="@+id/b_expert"
                    android:onClick="onButtonClick"
                    android:background="@drawable/buttonstart"
                    android:width="150dp"
                    android:height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_above="@+id/bMenu"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:id="@+id/bRecord"
                    android:onClick="onRecordClick"
                    android:background="@drawable/buttonstart"
                    android:width="150dp"
                    android:height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_above="@+id/bExit"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit"
                    android:id="@+id/bExit"
                    android:onClick="onExitClick"
                    android:background="@drawable/buttonstart"
                    android:height="40dp"
                    android:width="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/bStart"
                    android:layout_alignStart="@+id/bStart"
                    android:layout_marginBottom="70dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>